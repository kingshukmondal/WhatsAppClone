<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_20sdp"
    android:gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/_5sdp">

            <EditText
                android:id="@+id/edt_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/roundcorners3"
                android:backgroundTint="#fff"
                android:gravity="center_vertical"
                android:hint="Message"
                android:paddingLeft="@dimen/_30sdp"
                android:textColor="#292B2C"
                android:textColorHint="#AE171A1B" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_13sdp"
                android:src="@drawable/ic_baseline_insert_emoticon_24"
                app:tint="#70000000"></ImageView>

            <LinearLayout
                android:id="@+id/itemsvisible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/attachment"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/attachment"
                    app:tint="#8A000000"></ImageView>

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    app:tint="#8A000000"></ImageView>
            </LinearLayout>

            <ImageView
                android:id="@+id/attachment2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="right"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/attachment"
                android:visibility="invisible"
                app:tint="#8A000000"></ImageView>
        </FrameLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_weight="5"
            android:background="@drawable/roundcorners3"
            android:backgroundTint="@color/whatsapp1"
            android:padding="4dp"
            android:src="@android:drawable/ic_menu_send"
            app:tint="@color/white" />
    </LinearLayout>
</LinearLayout>